$TTL 1h
@   IN  SOA ns1.milliways.lan. admin.milliways.lan. (
        {{ ansible_date_time.date | regex_replace('-', '') }}01 ; Serial
        1h         ; Refresh
        15m        ; Retry
        1w         ; Expire
        1h )       ; Negative Cache TTL

    IN  NS  ns1.milliways.lan.

{% for ptr in ptr_records %}
{{ ptr.ip_suffix }}   IN  PTR   {{ ptr.hostname }}.
{% endfor %}
