# Example terraform.tfvars for k3s service. DO NOT commit secrets here; use secure variables or CI secrets.

ct_root_password = "REPLACE_WITH_SECRET"
ct_ssh_keys = <<-EOT
ssh-ed25519 AAAA... user@host
EOT

network_bridge = "VLAN10"
network_gw = "192.168.10.1"

# Define control plane nodes
control_plane = [
  {
    hostname = "k3s-control-1"
    vmid     = 610
    target_node = "srv-mox"
    ip       = "192.168.10.60/24"
  }
]

# Define worker nodes
workers = [
  {
    hostname = "k3s-worker-1"
    vmid     = 611
    target_node = "srv-mox"
    ip       = "192.168.10.70/24"
  }
]
